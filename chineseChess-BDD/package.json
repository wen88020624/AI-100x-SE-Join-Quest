{
  "name": "chinese-chess-bdd",
  "version": "1.0.0",
  "description": "Chinese Chess game with BDD testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test:cucumber": "cucumber-js --require-module ts-node/register --require 'src/test/**/*.ts' src/test/features/**/*.feature && npm run report:cucumber",
    "test:debug": "cucumber-js --debug",
    "report:cucumber": "ts-node generate-report.ts",
    "jest": "jest",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "cucumber-html-reporter": "^7.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "reflect-metadata": "^0.1.13"
  }
}
